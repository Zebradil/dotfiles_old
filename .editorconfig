; editorconfig.org

root = true

[*]
charset                     = utf-8
continuation_indent_size    = 4
end_of_line                 = lf
indent_size                 = 4
indent_style                = space
insert_final_newline        = true
max_line_length             = 120
tab_width                   = 4
trim_trailing_whitespace    = true

[*.md]
trim_trailing_whitespace    = false

[{*.md,*.neon,*.yaml,*.yml,*.tf}]
indent_size                 = 2
indent_style                = space

[{Makefile,Makefile.*,*.mk}]
indent_style                = tab

[{Jenkinsfile,*Jenkinsfile,Jenkinsfile*}]
indent_size                 = 2
indent_style                = space
