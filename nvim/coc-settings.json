{
  "explorer.icon.enableNerdfont": true,
  "python.jediEnabled": false,
  "python.formatting.provider": "black",
  "python.linting.pylintArgs": ["--disable=C0330", "--disable=R1724"],
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["Dockerfile", "dockerfile"],
      "args": ["--stdio"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  }
}
